<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/task_tip_text_color</item>
    </style>

    <style name="LockFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Setting_LinearLayout_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Divider_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/grey_back</item>
    </style>
</resources>
